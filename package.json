{
  "name": "records-of-processing-activities",
  "version": "1.0.0",
  "description": "A service that provides functionality to register, modify, list and delete GDPR records of processing activities.",
  "scripts": {
    "start": "NODE_ENV=development ts-node-dev --respawn --no-notify --transpileOnly ./src/server.ts",
    "build": "rm -rf dist && tsc",
    "prod": "NODE_ENV=production node ./dist/src/server.js",
    "lint": "tsc --noEmit && eslint ./src ./test --ext=js,ts --fix",
    "test": "NODE_ENV=test node node_modules/mocha/bin/_mocha -r ts-node/register test/record.api.test.ts --exit --timeout 10000",
    "lint:staged:fix": "eslint --ext tsx,ts,jsx,js,json,md,html --fix",
    "commit": "git-cz"
  },
  "private": true,
  "engines": {
    "node": ">= 12.13.0"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "app-root-path": "^2.2.1",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validate": "^0.4.4",
    "js-yaml": "^3.13.1",
    "keycloak-connect": "^7.0.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/chai": "^4.2.3",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.6",
    "@types/js-yaml": "^3.12.1",
    "@types/keycloak-connect": "^4.5.1",
    "@types/lodash": "^4.14.141",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.5",
    "@types/sinon": "^7.5.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "commitizen": "^4.1.2",
