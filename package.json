    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.0",
    "mongodb-memory-server": "^5.2.6",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.3"
